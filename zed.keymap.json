[
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j j": "vim::NormalBefore",
      "ctrl-j": ["workspace::SendKeystrokes", "enter"]
    }
  },
  {
    "context": "menu",
    "bindings": {
      "ctrl-j": ["workspace::SendKeystrokes", "ctrl-n"],
      "ctrl-k": ["workspace::SendKeystrokes", "ctrl-p"],
      "ctrl-m": ["workspace::SendKeystrokes", "enter"]
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual)",
    "bindings": {
      "t": "pane::ActivateNextItem",
      "shift-t": "pane::ActivatePrevItem",
      "space space": "editor::ToggleFold"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-5": "vim::DeleteRight",
      "x": ["workspace::SendKeystrokes", "\" _ ctrl-5"],
      "ctrl-6": "vim::Substitute",
      "s": ["workspace::SendKeystrokes", "\" _ ctrl-6"],
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "ctrl-7": "vim::VisualDelete",
      "x": ["workspace::SendKeystrokes", "\" _ ctrl-7"],
      "ctrl-8": "vim::Substitute",
      "s": ["workspace::SendKeystrokes", "\" _ ctrl-8"],
    }
  }
]
